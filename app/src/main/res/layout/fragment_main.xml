<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:background="@color/theme_background"
				tools:context="com.kiddos.nuktimetable.MainFragment">

	<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:weightSum="6"
			android:padding="3dp"
			style="@style/RowStyle"
			android:background="@color/theme_background"
			android:id="@+id/titleBar">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="6dp"
				android:layout_marginEnd="6dp"
				android:layout_column="0"
				android:gravity="center"
				style="@style/RowItemStyle"
				android:text="@string/time_period"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="3dp"
				android:layout_marginEnd="3dp"
				android:layout_column="1"
				style="@style/RowItemStyle"
				android:text="@string/monday_abbr"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="3dp"
				android:layout_marginEnd="3dp"
				android:layout_column="2"
				style="@style/RowItemStyle"
				android:text="@string/tuesday_abbr"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="3dp"
				android:layout_marginEnd="3dp"
				android:layout_column="3"
				style="@style/RowItemStyle"
				android:text="@string/wednesday_abbr"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="3dp"
				android:layout_marginEnd="3dp"
				android:layout_column="4"
				style="@style/RowItemStyle"
				android:text="@string/thursday_abbr"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="3dp"
				android:layout_marginEnd="3dp"
				android:layout_column="5"
				style="@style/RowItemStyle"
				android:text="@string/friday_abbr"/>
	</TableRow>

	<GridView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_below="@+id/titleBar"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:numColumns="6"
			android:id="@+id/gvSchedule"/>
</RelativeLayout>
