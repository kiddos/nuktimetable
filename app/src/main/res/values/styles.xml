<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
		<item name="android:logo">@android:color/transparent</item>
	</style>

	<style name="ButtonStyle">
		<item name="android:background">@color/theme_background_dark</item>
		<item name="android:textColor">@color/theme_text_highlight</item>
	</style>

	<style name="RowStyle">
		<item name="android:weightSum">6</item>
	</style>

	<style name="RowItemStyle">
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/theme_text_highlight2</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	</style>


</resources>
