<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowTitleSize">0dp</item>
		<item name="android:logo">@android:color/transparent</item>
	</style>

	<style name="ButtonStyle">
		<item name="android:background">@color/normal_background</item>
		<item name="android:textColor">@color/theme_text_highlight</item>
	</style>

	<style name="RowStyle">
		<item name="android:weightSum">6</item>
	</style>

	<style name="RowItemStyle">
		<item name="android:layout_weight">1</item>
		<item name="android:textColor">@color/theme_text_highlight2</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	</style>

	<style name="BlockStyle">
		<item name="android:layout_weight">1</item>
		<item name="android:layout_marginRight">3dp</item>
	</style>

</resources>
